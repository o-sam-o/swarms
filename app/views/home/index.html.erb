<% content_for :head do %>
	<%= stylesheet_link_tag 'prettyPhoto' %>

  <%= javascript_include_tag 'jquery.prettyPhoto' %>
  <%= javascript_include_tag 'jquery.youtubeSearch' %> 
<% end %>

<% content_for :main_title do %>
  <% if params[:q].present? %>
    Search for '<%= params[:q] %>'
  <% elsif params[:genre].present? %>
    Popular <%= params[:genre].titleize %> Movies 
  <% else %>
    Most Popular Movies
  <% end %>
<% end %>

<script type="text/javascript" charset="utf-8"> 
  $(document).ready(function(){
      $("a[rel^='youtubeSearch']").youtubeSearch();
      // Make pagination ajax
      $('.pagination a').attr('data-remote', 'true');
  });
</script> 

<% unless @movies.blank? %>
  <div id='search-results'>
    <%= render :partial => "search_results" %>
  </div>
<% else %>
  No movies.
<% end %>

<% content_for :sidebar_title do %>
  More Info
<% end %>

<% content_for :sidebar do %>
  <div class="widget">
    <h2 class="widgettitle">About Swarms</h2>
    <p id="about-swarms">
      <strong>Swarms</strong> is a new breed of torrent search engine that focus on a rich data user experience.   
      Swarms caters to the activities of browsing and content discovery as apposed to 
      boring tables of torrent file names.<br/>
      <strong>We</strong> hook into the innately social nature bittorrent and tracks a movie 
      popularity though the analysis of swarm sizes.  This means means new movies and rips graviate 
      towards the front page.<br/>
      <strong>We</strong> also provide descriptive movie bios, inline movie trailers and graphs of swarm sizes over time.
    </p>
  </div>
  <div class="widget">
    <h2 class="widgettitle">Recent Additions</h2>
    <table id="recently-added-table" class="rounded-table">
      <tbody>
        <% @recent_additions.each do |movie| %>
          <tr>
            <td><%= link_to movie.display_name, movie_path(movie), 
              :class => 'tooltip', :title => "Added #{movie.created_at.strftime('%d %B %Y')}" %>
            </td>
          </tr>
        <% end %>  
      </tbody>
    </table>
  </div>  
<% end %>
